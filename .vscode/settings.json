{
  "workbench.editor.labelFormat": "medium", // short,medium,long
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "cSpell.enableFiletypes": [
    "!json",
    "!jsonc",
    "!jupyter",
    "!markdown",
    "!plaintext",
    "!python",
    "!script",
    "!yaml"
  ],
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "cSpell.words": [
    "DICOM",
    "hashdate",
    "MIRC",
    "ptid",
    "PYDICOM",
    "PYNETDICOM",
    "RSNA",
    "tkhtmlview",
    "uids"
  ],
  "python.analysis.typeCheckingMode": "off",
  "editor.defaultFoldingRangeProvider": "ms-python.black-formatter",
  "editor.defaultFormatter": "ms-python.black-formatter",
  "python.analysis.inlayHints.functionReturnTypes": false,
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.inlayHints.pytestParameters": false,
  "python.analysis.inlayHints.callArgumentNames": "off",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.ignore": [
    "builtins.pyi"
  ],
  "python.analysis.exclude": [
    ".vscode",
    "prototyping",
    "**/dist",
    "**/build"
  ],
  "python.analysis.addImport.heuristics": false,
  "editor.suggest.showTypeParameters": false,
  "python.analysis.packageIndexDepths": [

    {
      "name": "sklearn",
      "depth": 2
    },
    {
      "name": "matplotlib",
      "depth": 2
    },
    {
      "name": "scipy",
      "depth": 2
    },
    {
      "name": "django",
      "depth": 2
    },
    {
      "name": "flask",
      "depth": 2
    },
    {
      "name": "fastapi",
      "depth": 2
    }
  ],
  "python.languageServer": "Pylance",
}
