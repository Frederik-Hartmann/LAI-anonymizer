{
  "workbench.editor.labelFormat": "medium", // short,medium,long
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "ruff.importStrategy": "useBundled",
  "[python]": {
    
    "editor.defaultFormatter": "charliermarsh.ruff", // ms-python.black-formatter",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",

  },
  "python.analysis.typeCheckingMode": "off",
  // "editor.defaultFoldingRangeProvider": "ms-python.black-formatter",
  // "editor.defaultFormatter": "ms-python.black-formatter",
  "python.analysis.inlayHints.functionReturnTypes": false,
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.inlayHints.pytestParameters": false,
  "python.analysis.inlayHints.callArgumentNames": "off",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.ignore": [
    "builtins.pyi"
  ],
  "python.analysis.exclude": [
    ".vscode",
    "src/prototyping",
    "**/dist",
    "**/build"
  ],
  
  "editor.suggest.showTypeParameters": false,  
  "python.languageServer": "Pylance",

}
